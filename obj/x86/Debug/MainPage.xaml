<Page
    x:Class="Browser.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Поисковая строка -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <TextBox x:ConnectionId='3' x:Name="urlTextBox" Width="200" PlaceholderText="Введите URL" />
            <Button x:ConnectionId='4' Content="Перейти"                  HorizontalAlignment="Left" Margin="10,0,0,0" />
        </StackPanel>

        <!-- Область отображения веб-страницы -->
        <WebView x:ConnectionId='2' x:Name="webView" Margin="10,40,10,10" />
    </Grid>
</Page>

